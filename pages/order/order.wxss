/* pages/order/order.wxss */
page{
  height: 100%;
}
.active{
  color: #fff !important;
  background-image: linear-gradient(-236deg,#ff5687,#ff62c5);
  box-shadow: 0 2px 4px 0 rgba(255,100,145,.7);
}
.header-wrap{
  height: 50px;
  background-color: #fff;
}
.header{
  text-align: center;
  font-size: 16px;
  z-index: 5;
  color: #333;
  letter-spacing: 0;
  padding: 10px 0;
  width: 100%;
  background:url(data:image/svg+xml;base64,);
  background-repeat:no-repeat;
  background-position:12px center;
  background-color: #fff;
  position: fixed;
}
.checked::after{
  background: url(data:image/png;base64,) no-repeat center center;
}
.order-wrap{
  padding-bottom: 100px;
}
.order-item{
  padding: 5px 12px;
  display: flex;
  align-items: center;
}
.check-wrap{
  width: 10%;
  height: 50px;
  position: relative;
}
.check-wrap checkbox{
  visibility: hidden;
  border-radius: 50%;
  
}
.check-wrap checkbox-group{
  height: 30px;
  width: 30px;
  position: absolute;
  z-index: 5;
}
.check-wrap::after{
  content: '';
  position: absolute;
  z-index: 1;
  top: 10px;
  left: 0;
  width: 20px;
  height: 20px;
  border: 1px solid #ff62c5;
  border-radius: 50%;
}
.image-wrap{
  width: 160rpx;
  height: 240rpx;
}
.image-wrap image{
  width: 100%;
  height: 100%;
}
.item-info{
  flex: 1;
  margin-left: 12px;
}
.item-info .item-name{
  margin-bottom: 5px;
  font-size: 12px;
  line-height: 12px;
  max-height: 24px;
}
.item-info .item-desc{
  height: 100rpx;
  font-size: 12px;
  color: #999;
  line-height: 12px;

}
.item-info .item-price{
  color: #ff5587;
  font-size: 12px;
  margin-right: 10px;
  font-weight: 500;
}
.change-count{
  display: flex;
  align-items: center;
  justify-content: space-between;
  text-align: center;
  width: 90px;
}
.change-count .count{
  padding: 0 15px;
}
.reduce, .add{
  flex: 0 0 32px;
  width: 32px;
  height: 32px;
  border-radius: 32px;
  background: 50% no-repeat;
  background-size: contain;
  border: 1px solid #999;
  color: #ff62c5;
  border-color: #ff5687;
}
.footer-wrap{
  position: fixed;
  z-index: 6;
  bottom: 0;
  height: 120rpx;
  width: 100%;
  background-color: #fff;
  display: flex;
  align-items: center;
}
.footer-check{
  padding-left: 39px;
  font-size: 14px;
  position: relative;
}
.footer-check checkbox{
  visibility: hidden;
  position:absolute;
  left:13px;
  z-index:6;
}
.footer-check::after{
  content: '';
  position: absolute;
  left: 30rpx;
  top: 5rpx;
  width: 36rpx;
  height: 36rpx;
  border: 1px solid #ff62c5;
  border-radius: 50%;
}
.total-price-wrap{
  width: 45%;
  text-align: right;
}
.total-price{
  
  font-size: 14px;
  color: #212121;
}
.total-price text:nth-child(2){
  color: #ff5587;
}
.price-info{
  display: block;
  font-size: 12px;
  color: #999;
  text-align: right;
  line-height: 16px;
}
.balance{
  left:12px;
  width:27%;
  line-height:40px !important;
  border-radius:100px;
  background-color:#e7e7e7;
  height: 40px;
  color: #999;
}

.delete-wrap{
  position: fixed;
  width: 100%;
  height: 100%;
  bottom: 0;
  background: rgba(0,0,0,.4);
  overflow: hidden;
  z-index: 10002;
}
.del-container{
  height: 220px;
  max-width: 345px;
  border-radius: 5px;
  background-color: #fff;
  position: fixed;
  top: 50%;
  left: 15px;
  right: 15px;
  margin: -110px auto 0;
}
.del-image{
  background-image: url(//s1.hdslb.com/bfs/static/mall-c/static/img/confirm@3x.59c7a35.png);
  background-size: 100%;
  width: 136px;
  height: 115px;
  position: absolute;
  bottom: 129px;
  left: 50%;
  margin-left: -68px;
}
.del-title{
  font-size: 18px;
  line-height: 18px;
  text-align: center;
  padding-bottom: 30px;
  padding-top: 117px;
  margin: 0;
}
.del-btn{
  display: flex;
  padding: 0 15px;
}
.del-btn button{
  height: 40px;
  max-width: 150px;
  box-sizing: border-box;
  border: 1px solid #ccc;
  border-radius: 5px;
  line-height: 38px;
  color: #999;
  font-size: 15px;
  text-align: center;
  flex-grow: 1;
}
.delete{
  margin-left: 15px;
}