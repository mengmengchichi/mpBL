/* pages/order/order.wxss */
page{
  height: 100%;
}
.checked::after{
  background: url(data:image/png;base64,) no-repeat center center;
}
.order-wrap{
  height: 100%;
}
.order-item{
  padding: 5px 12px;
  display: flex;
  align-items: center;
}
.check-wrap{
  width: 10%;
  height: 50px;
  position: relative;
}
.check-wrap checkbox{
  visibility: hidden;
  border-radius: 50%;
  
}
.check-wrap checkbox-group{
  height: 30px;
  width: 30px;
  position: absolute;
  z-index: 5;
}
.check-wrap::after{
  content: '';
  position: absolute;
  z-index: 1;
  top: 10px;
  left: 0;
  width: 20px;
  height: 20px;
  border: 1px solid #ff62c5;
  border-radius: 50%;
}
.image-wrap{
  width: 160rpx;
  height: 240rpx;
}
.image-wrap image{
  width: 100%;
  height: 100%;
}
.item-info{
  flex: 1;
  margin-left: 12px;
}
.item-info .item-name{
  margin-bottom: 5px;
  font-size: 12px;
  line-height: 12px;
  max-height: 24px;
}
.item-info .item-desc{
  height: 100rpx;
  font-size: 12px;
  color: #999;
  line-height: 12px;

}
.item-info .item-price{
  color: #ff5587;
  font-size: 12px;
  margin-right: 10px;
  font-weight: 500;
}
.change-count{
  display: flex;
  align-items: center;
  justify-content: space-between;
  text-align: center;
  width: 90px;
}
.reduce, .add{
  flex: 0 0 32px;
  width: 32px;
  height: 32px;
  border-radius: 32px;
  background: 50% no-repeat;
  background-size: contain;
  border: 1px solid #999;
  color: #ff62c5;
  border-color: #ff5687;
}