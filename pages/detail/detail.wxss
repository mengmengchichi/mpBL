/* pages/detail/detail.wxss */
page{
  position: relative;
  height: 100%;
  background-color: #f2f2f2;
}
.header{
  position: absolute;
  width: 100%;
  top: 5px;
  height: 30px;
  z-index: 1;
}
.header-img {
  margin-left: 10px;
  width: 30px;
  height: 30px;
}
.detail-wrap{
  height: 100%;
}
.banner-wrap image{
  width: 100%;
}
.banner-wrap{
  position: relative;
}
.banner-info{
  position: absolute;
  width: 100%;
  bottom: 5px;
  background: linear-gradient(-180deg,transparent,rgba(0,0,0,.7) 82%) bottom no-repeat;
  padding: 15px;
}
.banner-name{
  font: 14px;
  color: #fff;
}
.banner-price{
  font-size: 12px;
  color: #fb7299;
}
.banner-price .true-price text{
  font-size: 18px;
  font-weight: bold;
}
.false-price{
  color: rgb(192, 192, 192);
  font-size: 14px;
}
.time-address{
  background-color: #fff;
}
.info-time{
  padding: 0 12px;
  box-shadow: inset 0 1px 4px 0 rgba(0,0,0,.06);
  border-bottom: 1px solid #f2f2f2;
  font-size: 14px;
  line-height: 50px;
  position: relative;
}
.info-time image{
  position: absolute;
  top: 10px;
  width: 30px;
  height: 30px;
}
.info-time text{
  padding-left: 30px;
}
.info-address{
  padding: 0 12px;
  box-shadow: inset 0 1px 4px 0 rgba(0,0,0,.06);
  font-size: 14px;
  line-height: 50px;
  position: relative;
}
.info-address image{
  position: absolute;
  top: 10px;
  width: 30px;
  height: 30px;
}
.info-address text{
  padding-left: 30px;
  display: block;
}
.address-top{
  height:30px;
  line-height:34px;
}
.address-bottom{
  font-size: 12px;
  line-height: 16px;
  color: #999;
}

.footer-wrap{
  width: 100%;
  position: fixed;
  background-color: #fff;
  bottom: 0;
  display: flex;
  align-items: center;
  height: 60px;
}
.footer-wrap view{
  height: 66%;
  line-height: 42px;
}
.collect{
  margin-left: 5px;
}
.collect image{
  width: 20px;
  height: 20px;
}
.collect text{
  display: block;
  font-size: 10px;
  color: #999;
  line-height: 0;
}
.buy-alone{
  margin: 20px;
  text-align: center;
  border-radius: 40px;
  color: #fb7299;
  border: 1px solid #fb7299;
  flex: 1;
}
.buy-collage{
  margin-right: 5px;
  text-align: center;
  color: #fff;
  border-radius: 40px;
  background-color: #fb7299;
  flex: 1;
}

.buy-alone-modal{
  height: 100%;
  width: 100%;
  background-color: rgba(0,0,0,.5);
  position: fixed;
  top: 0;
  z-index: 4;
}
.buy-alone-modal>.cancelModal{
  height: 47%;
}
.modal-container{
  position: absolute;
  bottom: 70px;
  width: 90%;
  background-color: #fff;
  border-radius: 4px;
  margin: 5%;
  max-height: 75%;
}
.title{
  font-size: 14px;
  margin: 10px 5px;
  color: #212121;
  font-weight: 400;
}
.screen-container{
  padding-bottom:11px;
  border-bottom: 1px solid #e7e7e7;
}
.price-container{
  padding-bottom:11px;
  border-bottom: 1px solid #e7e7e7;
}
.screen-time{
  display: flex;
}
.screen-item{
  margin-left: 5%;
  height: 30px;
  font-size: 12px;
  line-height: 30px;
  border-radius: 30px;
  padding: 0 16px;
  border: 1px solid;
  border-color: #ccc;
}
.price{
  display: flex;
}
.price-item{
  margin-left: 5%;
  height: 30px;
  font-size: 12px;
  line-height: 30px;
  border-radius: 30px;
  padding: 0 16px;
  border: 1px solid;
  border-color: #ccc;
}
.counter{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12px;
}
.change-count{
  display: flex;
  align-items: center;
  justify-content: space-between;
  text-align: center;
  width: 90px;
}
.reduce, .add{
  flex: 0 0 32px;
  width: 32px;
  height: 32px;
  border-radius: 32px;
  background: 50% no-repeat;
  background-size: contain;
  border: 1px solid #999;
  color: #ff62c5;
  border-color: #ff5687;
}
.count{
  flex: 1;
  text-align: center;
  font-size: 14px;
  color: #212121;
}
.modal-footer{
  position: fixed;
  z-index: 5;
  bottom: 0;
  width: 100%;
  height: 60px;
  background-color: #fff;
  display: flex;
  align-items: center;
}
.buy-now{
  color: #fff;
  box-shadow: 0 1px 4px 0 rgba(255,100,145,.7);
  font-size: 16px;
  line-height: 40px;
  height: 40px;
  text-align: center;
  border-radius: 40px;
  flex:1;
  margin:0 10px;
  background: linear-gradient(270deg,#ff62c5,#ff5687);
}
.cancel{
  position: absolute;
  right: 22px;
  top: 42%;
  width: 40px;
  height: 40px;
  background-image: linear-gradient(-180deg,#fff 12%,#f5f5f5);
  box-shadow: 0 2px 4px 0 rgba(0,0,0,.08);
  border-radius: 20px;
  z-index: 5;
  line-height: 40px;
  text-align: center;
}
.native{
  color: #fb7299;
  border-color: #fb7299;
}